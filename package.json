{
  "name": "ng-q-plus",
  "description": "A module enhancing $q promises with additional features",
  "keywords": [
    "angularjs",
    "requirejs",
    "q",
    "promise",
    "browserify",
    "$q"
  ],
  "homepage": "https://github.com/dbartholomae/ng-q-plus",
  "bugs": "https://github.com/dbartholomae/ng-q-plus/issues",
  "license": "MIT",
  "author": "Daniel Bartholomae <daniel@bartholomae.name>",
  "dependencies": {},
  "peerDependencies": {
    "angular": "1.*"
  },
  "devDependencies": {
    "npm-build-tools": "*",
    "ghooks": "*",
    "validate-commit-msg": "*",
    "semantic-release": "^4.3.5",
    "conventional-changelog": "*",
    "coffee-script": "1.*",
    "nsp": "*",
    "mocha": "*",
    "karma": "~0.13",
    "karma-mocha": "*",
    "karma-angular": "*",
    "karma-chai-plugins": "*",
    "karma-coffee-preprocessor": "*",
    "karma-phantomjs-launcher": "*",
    "phantomjs": "*",
    "karma-browserify": "*",
    "karma-coverage": "*",
    "karma-threshold-reporter": "*",
    "browserify-istanbul": "*",
    "angular": "1.*",
    "angular-mocks": "*",
    "requirejs": "*",
    "coffeeify": "2.*"
  },
  "main": "lib/ng-q-plus.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbartholomae/ng-q-plus.git"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm run test && npm run update-changelog && npm run commit-changelog"
    }
  },
  "scripts": {
    "test": "npm run test:nsp && npm run test:requirejs && npm run test:global && npm run test:browserify",
    "test:nsp": "nsp check",
    "test:requirejs": "karma start karma.requirejs.conf.coffee",
    "test:global": "karma start karma.global.conf.coffee",
    "test:browserify": "karma start karma.browserify.conf.coffee",
    "build": "coffee -c -o lib/ src/",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "update-changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "commit-changelog": "git commit CHANGELOG.md -n -m \"docs: update changelog\" || echo \"No changes committed\""
  }
}
